# Supabase Configuration
# Copy this file to .env.local and fill in your values
# .env.local is gitignored and will not be committed

VITE_SUPABASE_URL=https://YOUR_PROJECT_ID.supabase.co
VITE_SUPABASE_ANON_KEY=your_anon_key_here

# Optional: adesso AI Hub (for AI-powered features)
# ADESSO_API_KEY=your_adesso_key_here

# Registration Code is managed via Supabase Secrets (not in .env)
# This prevents the code from being exposed in the client bundle
# Set via: npx supabase secrets set REGISTRATION_CODE=your_secret_code_here

# Sentry Error Tracking (Production only)
# VITE_SENTRY_DSN=https://your_key@your_org.ingest.sentry.io/your_project_id

# Sentry Auth Token for Source Map Upload (Build-time only, not VITE_ prefixed)
# Create at: https://sentry.io/settings/auth-tokens/
# SENTRY_AUTH_TOKEN=sntrys_your_token_here

# Feature Flags (Rollout Control)
# Set to 'true' to enable, anything else (or unset) = disabled
# See docs/concepts/AUTH-KONZEPT-ERWEITERT.md for rollout strategy

# Anonymous Supabase authentication (vs localStorage-only guest)
VITE_FF_ANON_AUTH=false

# Offline-first profile caching in IndexedDB
VITE_FF_OFFLINE=false

# Tournament limit (3 max) for anonymous users
VITE_FF_LIMIT=false

# Account merge (anonymous â†’ existing account)
VITE_FF_MERGE=false
